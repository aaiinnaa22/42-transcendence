{
  "name": "transcendence-backend",
  "private": true,
  "type": "module",
  "version": "0.0.0",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "HOSTNAME=127.0.0.1 PORT=6000 NODE_ENV=development nodemon --watch src src/index.ts",
    "dev-db-build": "NODE_ENV=development npx prisma migrate dev --name init",
    "dev-db-seed": "NODE_ENV=development npx prisma db seed"
  },
  "dependencies": {
    "@fastify/jwt": "^10.0.0",
    "@fastify/oauth2": "^8.1.2",
    "@prisma/client": "^6.17.0",
    "fastify": "^5.6.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.7.1",
    "nodemon": "^3.1.10",
    "prisma": "^6.17.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "prisma": {
    "seed": "tsx ./prisma/seed.ts"
  }
}
