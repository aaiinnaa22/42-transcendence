{
  "name": "transcendence-backend",
  "private": true,
  "type": "module",
  "version": "0.0.0",
  "scripts": {
    "lint": "npx eslint \"src/**/*.ts\"",
    "format": "npx eslint \"src/**/*.ts\" --fix",
    "build": "tsc -p tsconfig.json",
    "dev": "NODE_ENV=development nodemon --watch src --exec tsx src/index.ts",
    "dev-db-build": "NODE_ENV=development DATABASE_URL=file:./dev.db npx prisma migrate dev --name init",
    "dev-db-seed": "NODE_ENV=development npx prisma db seed",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:watch": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --watch",
    "test:coverage": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/multipart": "^9.3.0",
    "@fastify/oauth2": "^8.1.2",
    "@fastify/websocket": "^11.2.0",
    "@prisma/client": "^6.17.0",
    "@types/bcrypt": "^6.0.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "envalid": "^8.1.1",
    "fastify": "^5.6.1",
    "google-auth-library": "^10.4.0",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "otplib": "^12.0.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "qrcode": "^1.5.4",
    "sharp": "^0.34.5",
    "uuid": "^13.0.0",
    "ws": "^8.18.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/json": "^0.14.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.1",
    "@types/qrcode": "^1.5.6",
    "@types/ws": "^8.18.1",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.1.3",
    "prisma": "^6.17.0",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  }
}
